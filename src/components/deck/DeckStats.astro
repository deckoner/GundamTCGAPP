          <canvas id="cost-chart"></canvas>
        </div>
      </div>
    </div>

    <div class="flex flex-col gap-4">
      <div class="rounded-lg border border-white/5 bg-black/30 p-3 text-center">
        <span
          class="text-text-secondary text-[10px] font-bold tracking-wider uppercase"
          >Recursos</span
        >
        <div
          class="mt-1 text-xl font-black text-blue-400"
          id="stat-total-resources"
        >
          0/10
        </div>
      </div>

      <div>
        <h4
          class="text-text-secondary mb-2 text-[10px] font-bold tracking-wider uppercase"
        >
          Tipos de Carta
        </h4>
        <div
          class="flex flex-col gap-1 text-xs text-white"
          id="type-distribution"
        >
          <!-- Rellenado por JS -->
          <span class="text-text-muted text-xs italic">Añade cartas...</span>
        </div>
      </div>
    </div>
  </div>
