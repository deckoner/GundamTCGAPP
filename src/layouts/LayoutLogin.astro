---
import "../styles/global.css";
import Analytics from "@vercel/analytics/astro";
---

<!doctype html>
<html lang="es" class="bg-background text-text-primary">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>GundamTCG</title>
    <link rel="icon" type="image/svg+xml" href="/assets/favicon.svg" />
    <link rel="alternate icon" href="/assets/favicon.png" />
  </head>
  <body
    class="bg-background text-text-primary selection:bg-accent flex min-h-screen flex-col overflow-x-hidden font-sans selection:text-white"
  >
    <main
      class="animate-fade-in flex flex-grow items-center justify-center px-4 sm:px-6 lg:px-8"
    >
      <slot />
    </main>
    <Analytics />
  </body>
</html>
